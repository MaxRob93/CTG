
<div class="navbar-wagon">
  <a href="/" class="navbar-CTG-brand">
    <%= image_tag ("Logo_CTG.png"), class: "navbar-CTG-brand" %>
  </a>
  <!-- <input type="text" name="search" placeholder="Search.." class:"navbar-CTG-search"> -->

  <div class="navbar_container ">
    <% if user_signed_in? %>
    <form class="form" method="POST">
      <!-- <div class="row"> <div class="col-md-8 col-ld-6"> -->
        <input class="form" name="name" type="text" placeholder="Search"/>
        <button class="navbar-button " aria-hidden="true">
          <i class="fa fa-search"></i>
        </button>
        <!-- </div> </div> -->
      </form>
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <img src="https://kitt.lewagon.com/placeholder/users/ssaunier" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to "#" do %>
              <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
              <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings")%>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
      <% else %>
      <form class="form" method="POST">
      <!-- <div class="row"> <div class="col-md-8 col-ld-6"> -->
        <input class="form" name="name" type="text" placeholder="Search"/>
        <button class="navbar-button " aria-hidden="true">
          <i class="fa fa-search"></i>
        </button>
        <!-- </div> </div> -->
      </form>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <% end %>
    </div>
  </div>
</div>
</div>

</div>
