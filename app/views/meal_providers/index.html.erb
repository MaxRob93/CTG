<div class="meal_provider_container">
  <h1>Choose a Restaurant</h1>
  <div class="row">
    <% @meal_providers.each do |mp| %>
    <%= link_to meal_provider_path(mp) do %>
    <div class="col-xs-6 col-sm-4 col-md-3">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2))";>
        <%=  %>
        <div class="card-category">
          <%= mp.category %>
        </div>
        <div class="card-description">
          <h2> <%= mp.name %> </h2>
          <p><%= mp.address %> </p>
        </div>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
</div>

<%= link_to "Go back to home page", root_path %>
